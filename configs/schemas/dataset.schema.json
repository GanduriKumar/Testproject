{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/dataset.schema.json",
  "title": "Conversation Dataset",
  "type": "object",
  "required": ["dataset_id", "version", "metadata", "conversations"],
  "properties": {
    "dataset_id": {"type": "string"},
    "version": {"type": "string"},
    "metadata": {
      "type": "object",
      "required": ["domain", "difficulty"],
      "properties": {
        "domain": {"type": "string", "enum": ["commerce", "banking"]},
        "difficulty": {"oneOf": [
          {"type": "string", "enum": ["easy", "medium", "hard", "mixed"]},
          {"type": "array", "items": {"type": "string", "enum": ["easy","medium","hard"]}, "minItems": 1, "uniqueItems": true}
        ]},
        "tags": {"type": "array", "items": {"type": "string"}},
        "task_type": {"type": "string"},
        "short_description": {"type": "string", "maxLength": 280, "description": "Human-readable summary of the dataset/domain."}
      }
    },
    "conversations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["conversation_id", "turns"],
        "properties": {
          "conversation_id": {"type": "string"},
          "title": {"type": "string", "maxLength": 120, "description": "Short, readable conversation title."},
          "metadata": {"type": "object", "properties": {
            "short_description": {"type": "string", "maxLength": 280, "description": "Short scenario description."}
          }, "additionalProperties": true},
          "turns": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["role", "text"],
              "properties": {
                "role": {"type": "string", "enum": ["user", "assistant"]},
                "text": {"type": "string"}
              }
            }
          }
        }
      }
    }
  }
}
